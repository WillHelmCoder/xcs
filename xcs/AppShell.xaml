<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="xcs.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:xcs"
    Shell.FlyoutBehavior="Disabled"
    >




    <TabBar >
        <Tab Title="Profile">
            <ShellContent Title="Xipe Wallet"  ContentTemplate="{DataTemplate local:ProfilePage}"  Route="Profile"  />
        </Tab>
        <Tab  Title="MainPage" >
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" Route="MainPage" Title="Wallet" />
        </Tab>
        <Tab Title="Settings">
            <ShellContent Title="Xipe Wallet"  ContentTemplate="{DataTemplate local:SettingsPage}"  Route="Settings"  />
        </Tab>
   
    </TabBar>



</Shell>
