<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="xcs.Login"
             xmlns:local="clr-namespace:xcs"
             xmlns:Mlocal="clr-namespace:xcs.Models"    
             Shell.PresentationMode="Modal"
             Title="Login"
             BackgroundColor="{DynamicResource PrimaryColor}">
    
    <ContentPage.BindingContext>
        <Mlocal:LoginViewModel/>
    </ContentPage.BindingContext>

    <StackLayout>

        <Entry Text="{Binding User }" Placeholder="User Name"></Entry>

        <Entry Text="{Binding Password }" Placeholder="Password" IsPassword="True"></Entry>
        <Button
                Text="Log In"
                FontAttributes="Bold"
				Command="{Binding LoginCommand}"
                HorizontalOptions="Center" />

        <Button
                Text="Log Out"
                FontAttributes="Bold"
				Command="{Binding LogOutCommand}"
                HorizontalOptions="Center" />

    </StackLayout>


</ContentPage>
